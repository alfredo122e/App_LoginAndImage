<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_si_signin"
        android:layout_width="407dp"
        android:layout_height="60dp"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="23dp"
        android:backgroundTintMode="add"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:paddingStart="8dp"
        android:text="Registrarse"
        android:textColor="@color/black"
        android:textColorHint="@color/color1"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_si_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edt_si_correo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/diseno_button"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:hint="     nombre@gmail.com"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:textColor="@android:color/secondary_text_light"
        app:layout_constraintBottom_toTopOf="@+id/txt_si_contraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_si_correo" />

    <TextView
        android:id="@+id/txt_si_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/alata"
        android:text="Correo electrónico:"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/edt_si_correo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_si_nombre" />

    <EditText
        android:id="@+id/edt_si_nombre"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/diseno_button"
        android:drawableLeft="@drawable/ic_name"
        android:ems="10"
        android:hint="     Ingrese su nombre..."
        android:inputType="textPersonName"
        android:paddingStart="16dp"
        android:textColor="@android:color/secondary_text_light"
        app:layout_constraintBottom_toTopOf="@+id/txt_si_correo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_si_nombre" />

    <TextView
        android:id="@+id/txt_si_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/alata"
        android:text="Nombre completo:"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/edt_si_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_si_signin" />

    <TextView
        android:id="@+id/txt_si_contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/alata"
        android:text="Contraseña:"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/edt_si_contrasena"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_si_correo" />

    <TextView
        android:id="@+id/txt_si_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/alata"
        android:text="Confirmar contraseña:"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/edt_si_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_si_contrasena" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_si_contrasena"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/diseno_button"
        android:textColorHint="@android:color/secondary_text_light"
        app:endIconMode="password_toggle"
        app:layout_constraintBottom_toTopOf="@+id/txt_si_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_si_contraseña"
        app:startIconDrawable="@drawable/ic_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_si_contra"
            android:layout_width="379dp"
            android:layout_height="match_parent"
            android:background="@drawable/diseno_button"
            android:hint=""
            android:paddingStart="16dp"
            android:textColor="@android:color/secondary_text_light" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_si_signin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="79dp"
        android:background="@drawable/bordes"
        android:backgroundTint="@color/color1"
        android:fontFamily="@font/alata"
        android:text="Registrarse"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txt_si_registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_si_confirm" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_si_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="41dp"
        android:background="@drawable/diseno_button"
        android:textColorHint="@android:color/secondary_text_light"
        app:endIconMode="password_toggle"
        app:layout_constraintBottom_toTopOf="@+id/btn_si_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_si_confirm"
        app:startIconDrawable="@drawable/ic_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_si_repeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/diseno_button"
            android:hint=""
            android:paddingStart="16dp"
            android:textColor="@android:color/secondary_text_light" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/txt_si_registro"
        android:layout_width="106dp"
        android:layout_height="30dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:fontFamily="@font/alata"
        android:text="Inicie sesión"
        android:textColor="@color/black"
        android:textColorHint="@color/color1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_si_cuenta"
        app:layout_constraintTop_toBottomOf="@+id/btn_si_signin" />

    <TextView
        android:id="@+id/txt_si_cuenta"
        android:layout_width="wrap_content"
        android:fontFamily="@font/alata"
        android:text="¿Ya posee una cuenta?  "
        android:layout_height="30dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_si_registro"
        app:layout_constraintEnd_toStartOf="@+id/txt_si_registro"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <ImageView
        android:id="@+id/btn_si_back"
        android:layout_width="71dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="5dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>